void default_ricette(){

	FILE* file_ricette;
	t_ricetta ricetta;

	if(apriFile(&file_ricette, FILENAME_RICETTE, "rb+")){

		rewind(file_ricette);

		ricetta.valutazione = 0;
		//ricetta.preparata = 0;
		ricetta.counter_giorni = 0;


