		fwrite(&ricetta, sizeof(t_ricetta), 1, file_ricette);



							//------RICETTA 2-------
		strcpy(ricetta.nome, "ZUCCHINE");
		ricetta.categoria = VERDURA;

		ricetta.n_ingredienti = 1;

			//alimento 1: ZUCCHINE
